<h1>Episodes</h1>
<table class="main" cellpadding="0" cellspacing="0" width="100%">
	<tr>
		<th>TV Show</th>
		<th>Episode</th>
		<th>Torrent</th>
		<th>Subtitle</th>
		<th>&nbsp;</th>
	</tr>
	
	<% @episodes.each do |episode| %>
	<tr>
		<td><%= episode.show_name %></td>
		<td><%= episode.number_txt %></td>
		<td><%= episode.torrent_done.strftime("%d/%m/%Y - %H:%M") rescue "-" %></td>
		<td><%= episode.subtitle_done.strftime("%d/%m/%Y - %H:%M") rescue "-"%></td>
		<td>&nbsp;</td>
	</tr>
	<% end %>

</table>